mixin form-group-file(label="", id="", value="", placeholder="Đường dẫn file")
  div(form-group-file)
    label.form-label(for=id) #{label}
    .input-group
      span.btn.btn-outline-info(
        data-bs-toggle="modal" 
        data-bs-target="#modalFileManager"
      ) Chọn file
      input.form-control(
        id=id
        type="text"
        name=id
        value=value
        placeholder=placeholder
        input-file
      )
    
    div(preview-file).mt-3
      div.preview-image-box
        img(src="" alt="Preview" id=`preview-${id}`)
