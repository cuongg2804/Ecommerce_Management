mixin category_checkbox_list(list=[], level =0, listChecked = [])
  each item in list 
    - const space = `${level*20}px`
    div(class="checkbox-item" style=`margin-left: ${space}`)
      input(
        type="checkbox" 
        id=`checkbox-${item.id}` 
        value=item.id
        checked=(listChecked.includes(item.id))
        checkbox-item
      )
      label(for=`checkbox-${item.id}`) #{item.name}
    if(item.children && item.children.length > 0) 
      +category_checkbox_list(item.children, level + 1,listChecked)
    
  
    