extends ../../layouts/default.pug
include ../../mixin/options.pug
include ../../mixin/form-group-file.pug
include ../../mixin/checkbox.pug
block main
    .card
        .card-header
            .row.align-items-center
                .col
                    h4.card-title #{pageTitle}
                // end col
            // end row
        // end card-header
        .card-body.pt-0
            form(id="article-create")
                .row
                    .col-md-6.col-lg-6
                        .mb-3
                            label.form-label(for="name") Tên bài viết*
                            input.form-control(
                                placeholder="Nhập tên bài viết"  
                                type="text"
                                name="name"
                                id="name"
                            )
                    .col-md-6.col-lg-6
                        .mb-3
                            .input-group.mb-3
                                label.form-label(for="slug") Đường dẫn *
                                .input-group
                                    button#inputGroupFileAddon03.btn.btn-outline-primary(
                                        type="button" 
                                        generateSlug="Blog"
                                        from="name"
                                        to="slug"
                                    ) Tự động
                                    input(class="form-control" id="slug" name="slug")
                    .col-md-6.col-lg-6
                        .mb-3
                            label.form-label(for="category") Danh mục
                            div(class="checkbox-list" checkbox-list="category")
                                +category_checkbox_list(categoryTree)
                    .col-md-6.col-lg-6
                        .mb-3
                            label.form-label(for="status") Trạng thái
                            select.form-select(id="status" name="status" )
                                option(value="draft" selected=true) Bản nháp
                                option(value="publish") Xuất bản
                                option(value="stored") Lưu trữ
                    .col-md-6.col-lg-6
                        .mb-3
                            +form-group-file("Avatar","avatar")     
                    //- .col-md-6.col-lg-6            
                    //-     .mb-3
                    //-         label.form-label(for="status") Trạng thái
                    //-         div.d-flex
                    //-             label.me-3
                    //-                 input.me-2(type="radio" name="status" value="active")
                    //-                 | Hoạt động
                    //-             label
                    //-                 input.me-2(type="radio" name="status" value="inactive")
                    //-                 | Ngừng hoạt động


                    .col-md-12.col-lg-12
                        .mb-3
                            label.form-label(for="description") Mô tả
                            textarea.form-control(
                                name="description" 
                                id="description"
                                placeholder="Nhập mô tả" 
                                type="text"
                            )
                    .col-md-12.col-lg-12
                        .mb-3
                            label.form-label(for="content") Nội dung
                            textarea.form-control(
                                name="content" 
                                id="content"
                                placeholder="Nhập nội dung" 
                                type="text"
                            )
                button.btn.btn-primary.m-1(type="submit") Submit
                a.btn.btn-danger(type="button" href=`${prefixAdmin}/article/category`) Cancel
                // end card-body
            // end card


                                    
                
